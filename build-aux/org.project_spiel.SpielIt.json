{
  "app-id": "org.project_spiel.SpielIt",
  "runtime": "org.gnome.Platform",
  "runtime-version": "45",
  "sdk": "org.gnome.Sdk",
  "command": "spiel-it",
  "finish-args": [
    "--socket=session-bus",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--socket=pulseaudio"
  ],
  "modules": [
    {
      "name": "libspiel",
      "buildsystem": "meson",
      "config-opts": [
        "-Dtests=false",
        "-Ddocs=false",
        "-Dlibspeechprovider:tests=false",
        "-Dlibspeechprovider:docs=false"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/project-spiel/libspiel.git",
          "branch": "main"
        },
        {
          "type": "git",
          "url": "https://github.com/project-spiel/libspeechprovider.git",
          "branch": "main",
          "dest": "subprojects/libspeechprovider"
        }
      ]
    },
    {
      "name": "spiel-it",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "dir",
          "path": "../"
        }
      ]
    }
  ]
}